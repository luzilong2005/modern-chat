{
    "name": "modern-chat",
    "version": "1.0.0",
    "private": true,
    "description": "Vue 3 + TypeScript + Electron 开发的现代AI聊天应用",
    "keywords": [
        "electron",
        "chat",
        "app"
    ],
    "license": "MIT",
    "author": {
        "name": "luzilong2005"
    },
    "type": "module",
    "main": "out/main/main.js",
    "scripts": {
        "build-only": "run-s clean icon:build renderer:build electron:build:win:x64 electron:build:win:arm64",
        "clean": "rimraf -g out releases",
        "dev": "electron-vite dev --watch",
        "electron:base-build": "electron-builder --config electron-builder.config.ts build",
        "electron:build:win:arm64": "pnpm run electron:base-build --win --arm64",
        "electron:build:win:x64": "pnpm run electron:base-build --win --x64",
        "format": "prettier --write .",
        "icon:build": "electron-icon-builder --input=./resources/icon.png --output=./resources/build --flatten",
        "install-electron": "node ./node_modules/electron/install",
        "rebuild-all": "electron-rebuild -f -w better-sqlite3",
        "renderer:build": "electron-vite build",
        "start": "electron-vite dev"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.2",
        "@electron-toolkit/typed-ipc": "^1.0.2",
        "@vueuse/core": "^14.0.0",
        "@vueuse/router": "^14.0.0",
        "better-sqlite3": "^12.4.1",
        "dayjs": "^1.11.19",
        "dompurify": "^3.3.0",
        "electron-log": "^5.4.3",
        "electron-util": "^1.0.0",
        "element-plus": "^2.11.8",
        "es-toolkit": "^1.41.0",
        "fast-fuzzy": "^1.12.0",
        "lucide-vue-next": "^0.553.0",
        "marked": "^17.0.0",
        "nanoid": "^5.1.6",
        "openai": "^6.9.0",
        "pinia": "^3.0.4",
        "pinia-plugin-persistedstate": "^4.7.1",
        "tailwind-merge": "^3.4.0",
        "vue": "^3.5.24",
        "vue-i18n": "^11.1.12",
        "vue-router": "^4.6.3"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "^2.0.0",
        "@electron/rebuild": "^4.0.1",
        "@faker-js/faker": "^10.1.0",
        "@tailwindcss/vite": "^4.1.17",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "electron": "^38.7.0",
        "electron-builder": "^26.0.12",
        "electron-icon-builder": "^2.0.1",
        "electron-vite": "5.0.0-beta.3",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "prettier-plugin-merge": "^0.8.0",
        "prettier-plugin-organize-attributes": "^1.0.0",
        "prettier-plugin-packagejson": "^2.5.19",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "rimraf": "^6.1.0",
        "tailwindcss": "^4.1.17",
        "type-fest": "^5.2.0",
        "typescript": "^5.9.3",
        "vite": "npm:rolldown-vite@^7.2.5"
    },
    "pnpm": {
        "overrides": {
            "vite": "npm:rolldown-vite@latest"
        }
    }
}
